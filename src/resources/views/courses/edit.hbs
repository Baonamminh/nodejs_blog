<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form method="POST" action="/learn/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="description">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.description}}" id="description" name="name" >
        </div>

        <div class="mb-3">
            <label for="videoID">VideoID</label>
            <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" name="videoID" >
        </div>

        <div class="mb-3">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description" >{{course.description}}</textarea>
        </div>

        <div class="mb-3">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level" >
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>